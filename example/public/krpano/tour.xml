    <hotspot name="spot5" style="hotspot_style_anime_3" ath="-452.06719" atv="-19.36974" onclick="loadscene(scene_hongkong,null,MERGE,BLEND(1.0, easeInCubic));jscall(krpano.hooks.eyeMode())" />
  </scene>

</krpano>
